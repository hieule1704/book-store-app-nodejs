<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Book Store Application" />
    <meta name="author" content="Your Name" />
    <title><%= title %> - Book Store</title>
    <link href="/css/app.css" rel="stylesheet" />
</head>
<body>
    <%- include('partials/header') %>
    <main class="main pt-4">
        <div class="container">
            <h1 class="text-center">Welcome to the Book Store</h1>
            <div class="row">
                <% if(typeof books !== "undefined" && books.length > 0) { %>
                    <% books.forEach(book => { %>
                        <div class="col-md-4">
                            <article class="card mb-4">
                                <header class="card-header">
                                    <h4 class="card-title"><%= book.title %></h4>
                                </header>
                                <div class="card-body">
                                    <p class="card-text">Author: <%= book.author %></p>
                                    <p class="card-text">Genre: <%= book.genre %></p>
                                    <p class="card-text">Price: $<%= book.price.toFixed(2) %></p>
                                    <a href="/books/<%= book._id %>" class="btn btn-primary">View Details</a>
                                </div>
                            </article>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-center">No books available at the moment.</p>
                <% } %>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
    <script src="/js/app.js"></script>
</body>
</html>