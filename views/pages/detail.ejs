<div class="card shadow">
    <img src="/images/uploaded_img/<%= product.image %>" class="card-img-top" alt="<%= product.bookName %>">
    <div class="card-body text-center">
        <h5 class="card-title fw-bold">
            <%= product.bookName %>
        </h5>
        <p class="card-text"><i class="fa-solid fa-user"></i>
            <%= product.author.authorName %>
        </p>
        <p class="card-text"><i class="fa-solid fa-building"></i>
            <%= product.publisher.publisherName %>
        </p>
        <p class="card-text">Price: $<%= product.price.toLocaleString('en-US') %>
        </p>
        <p class="card-text">Stock: <%= product.stockQuantity %>
        </p>
        <p class="card-text">
            <%= product.bookDescription %>
        </p>
        <form action="/cart/add" method="POST">
            <input type="hidden" name="productId" value="<%= product._id %>">
            <input type="number" name="quantity" value="1" min="1" max="<%= product.stockQuantity %>"
                class="form-control mb-2">
            <button type="submit" class="btn btn-primary w-100">Add to Cart</button>
        </form>
    </div>
</div>