        </footer>

        <!-- Bootstrap 5.3.x JS Bundle (Local) -->
        <script src="/js/bootstrap.bundle.min.js"></script>

        <!-- Custom JavaScript (if any) -->
        <!-- <script src="/js/script.js"></script> -->
        <% if (locals.message && message.length> 0) { %>
            <div class="alert alert-danger">
                <% message.forEach(msg=> { %>
                    <p>
                        <%= msg %>
                    </p>
                    <% }) %>
            </div>
            <% } %>
</body>

</html>